<UserControl x:Class="ImporterPOS.WPF.Controls.StorageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                         xmlns:st="clr-namespace:ImporterPOS.WPF.States"
             xmlns:local="clr-namespace:ImporterPOS.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label Content="Choose your storage:" FontWeight="Light" FontSize="22" Margin="0 70 30 70" Foreground="White" HorizontalAlignment="Left"/>
            <ComboBox HorizontalAlignment="Left" ItemsSource="{Binding CurrentStorages}" SelectedItem="{Binding SelectedStorage}" x:Name="comboBoxSheets" Width="200" Height="30"/>
        </StackPanel>
        <Button HorizontalAlignment="Right" Style="{StaticResource settingsClickButton}" x:Name="btnSheet" Content="Submit" Command="{Binding EditCurrentDataGridCommand}" CommandParameter="{Binding ElementName=comboBoxSheets, Path=SelectedItem}" Width="80" Height="35"/>
    </Grid>
</UserControl>
